<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>

<BorderPane fx:controller="profiler.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <center>
        <VBox alignment="CENTER">
            <ImageView fx:id="imageView"
                       fitHeight="500" fitWidth="500"
                       preserveRatio="true"/>
            <Label fx:id="waifuName" alignment="BASELINE_LEFT"
                   prefWidth="500" prefHeight="200"/>
        </VBox>
    </center>
    <bottom>
        <VBox>
            <Label text="Rate your Waifu!"/>
            <Slider fx:id="rating"
                    min="1" max="4" majorTickUnit="1"
                    snapToTicks="true" showTickLabels="true"/>
            <HBox spacing="50" alignment="CENTER">
                <Button onAction="#yesClick" text="YES"
                        prefWidth="200" prefHeight="150"/>
                <Button onAction="#noClick" text="NO"
                        prefWidth="200" prefHeight="150"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>